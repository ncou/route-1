{
    "name": "phossa2/route",
    "license": "MIT",
    "type": "library",
    "description": "A fast and full-fleged routing library for PHP",
    "keywords": ["route", "phossa", "phossa2", "framework"],
    "homepage": "https://github.com/phossa2/route",
    "authors": [
        {
            "name": "Hong Zhang",
            "homepage": "https://github.com/phossa2"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "phossa2/event": "^2.1.6",
        "phossa2/shared": "^2.0.27"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "suggest": {
        "psr/log-implementation": "Allows log messages",
        "psr/http-message-implementation": "Allows handling middleware"
    },
    "autoload": {
        "psr-4": { "Phossa2\\Route\\": "src/Route/" }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs --standard=psr2 src/",
        "format": "phpcbf --standard=psr2 src/"
    },
    "config": {
        "platform": {
            "php": "5.4.0"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        }
    },
    "archive": {
        "exclude": [ "!vendor", "tests", "composer.lock" ]
    }
}
